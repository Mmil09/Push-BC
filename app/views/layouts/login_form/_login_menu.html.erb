<%= navbar_link("Sign Up", new_user_path) %>
<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Login</a>
      <div class="dropdown-menu dropdown-login animated fadeInUp">
        <%= form_tag '/login' do %>
        <%= render('shared/form_text_field', form: nil, label: :username, name: :username, type: "text") %>
        <br/>
        <%= render('shared/form_text_field', form: nil, label: :password, name: :password, type: "password") %>
        <br/>
         <%= submit_tag 'Login', class: "btn btn-primary pull-right" %>
        <% end %>
    </div>
  </li>




