<h1>Bootcamps</h1>
<hr class="hr-body">
<br/><br/>
<table class="table table-striped table-bordered info-table" id="BcListing">
	<thead>
		<tr>
			<th>Bootcamp <i class="fa fa-sort"></i> </th>
			<th>Location <i class="fa fa-sort"></i> </th>
		</tr>
	</thead>
	<tbody>
	<% @bootcamp.each do |bootcamp| %>	
		<tr>
			<td><%= link_to(bootcamp.name, bootcamp_path(bootcamp)) %></td>
			<td><%=bootcamp.description %></td>
		</tr>
<% end %>

</tbody>
</table>
<div class="row">
	<div class="col-lg-12" id="pager"></div>
</div>
<%= javascript_include_tag "jquery.tablesorter.min" %>
<%= javascript_include_tag "jquery.tablesorter.pager" %>
<%= javascript_include_tag "jquery.dataTables.min" %>
<script type="text/javascript">
 
 $("#BcListing").dataTable();
 
</script>